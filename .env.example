# Example .env file for production / staging
# Copy this to .env and set real values (do NOT commit secrets)

# Django
DJANGO_SECRET_KEY=replace-me-with-a-secure-random-string
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database (Postgres example)
DJANGO_DB_ENGINE=django.db.backends.postgresql
DJANGO_DB_NAME=chatroom_db
DJANGO_DB_USER=chatroom_user
DJANGO_DB_PASSWORD=strongpassword
DJANGO_DB_HOST=db
DJANGO_DB_PORT=5432

# Celery / Redis
CELERY_BROKER_URL=redis://redis:6379/0

# Frontend token (dev only)
FRONTEND_API_KEY=dev-frontend-token

# Other environment-specific settings can go here

# Nginx external port mapping (host:container)
NGX_EXTERNAL_PORT=8000
